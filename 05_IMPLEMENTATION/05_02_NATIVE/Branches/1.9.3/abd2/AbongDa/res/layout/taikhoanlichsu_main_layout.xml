<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@color/white_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical" >

        <Spinner
            android:id="@+id/taikhoanlichsuPage_spinner"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:background="@drawable/spinner_bg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/base_app_color"
            android:orientation="horizontal"
            android:weightSum="19" >

            <TextView
                android:id="@+id/tklichsu_stt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="2"
                android:gravity="center"
                android:text=" "
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/white_color" />

            <TextView
                android:id="@+id/tklichsu_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="2"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="Thời gian"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/white_color" />

            <TextView
                android:id="@+id/taikhoanlichsuPage_item_stt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="4"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="Thay đổi"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/white_color" />

            <TextView
                android:id="@+id/taikhoanlichsuPage_item_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="4"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="Sau thay đổi"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/white_color" />

            <TextView
                android:id="@+id/taikhoanlichsuPage_item_bt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="7"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="Nội dung"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/white_color" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/taikhoanlichsuPage_main_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
        </LinearLayout>
    </LinearLayout>

</ScrollView>
