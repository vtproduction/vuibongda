<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical" >

        <Spinner
            android:id="@+id/thongkePage_spinner"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:background="@drawable/spinner_bg" />
        

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/base_app_color"
            android:orientation="horizontal"
            android:weightSum="9" >

            <TextView
                android:id="@+id/thongkePage_item_stt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="3"
                android:gravity="center"
                android:text="Đội"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/white_color" />

            <TextView
                android:id="@+id/thongkePage_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="4"
                android:gravity="center"
                android:text="Cầu thủ"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/white_color" />

            <TextView
                android:id="@+id/thongkePage_item_bt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="2"
                android:gravity="center"
                android:text="Bàn thắng"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/white_color" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/thongkePage_main_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
        </LinearLayout>
    </LinearLayout>

</ScrollView>