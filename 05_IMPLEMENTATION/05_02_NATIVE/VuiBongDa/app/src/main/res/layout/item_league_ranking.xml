<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_bottom2"
    android:orientation="horizontal"
    android:weightSum="9">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/xephangPageItem_pos"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:text="20"
            android:layout_gravity="center_vertical"
            android:gravity="right"
            android:layout_marginLeft="5dp"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <ImageView
            android:id="@+id/TKHS_phone_cf"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/logochelsea"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="5dp"/>

        <TextView
            android:id="@+id/xephangPageItem_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/longName"
            android:layout_gravity="center_vertical"
            android:gravity="left"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:textSize="12sp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/xephangPageItem_tran"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="20"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/xephangPageItem_btbb"
        android:layout_weight="2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="10:20"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/xephangPageItem_hs"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="15"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/xephangPageItem_diem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:gravity="center"
        android:text="10"
        android:textAppearance="?android:attr/textAppearanceSmall" />

</LinearLayout>
