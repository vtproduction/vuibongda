<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@color/list_item_bg" >

    <LinearLayout
        android:id="@+id/livePage_group_leftLayout"
        android:layout_width="10dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/l0"
        android:orientation="vertical" >
    </LinearLayout>

    <ImageView
        android:id="@+id/livePage_group_leagueIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="fitXY"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@+id/livePage_group_leftLayout"
        android:src="@drawable/league_pl" 
        android:contentDescription="@string/null_string"/>

    <TextView
        android:id="@+id/livePage_group_leagueName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@+id/livePage_group_leagueIcon"
        android:text="@string/app_name"
        android:textStyle="bold"
        android:textColor="@color/list_item_text1"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ImageView
        android:id="@+id/livePage_group_Indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_action_expand_dark"
        android:contentDescription="@string/null_string" />

</RelativeLayout>