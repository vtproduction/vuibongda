<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tintuc_child_layout"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:background="#f6f2f2"
    android:orientation="vertical"
    android:weightSum="9" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="107dp"
        android:orientation="horizontal"
        android:weightSum="9" >

        <ImageView
            android:id="@+id/tintuc_listitem_thumbimg"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="20dp"
            android:layout_weight="3"
            android:background="@color/white_color"
            android:contentDescription="@string/null_string"
            android:paddingBottom="5dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:paddingTop="2dp"
            android:scaleType="fitXY"
            android:src="@drawable/no_image" />

        <TextView
            android:id="@+id/tintuc_listitem_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_weight="5"
            android:maxLines="3"

            android:textStyle="bold"
            android:text="@string/app_name"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#545454" />

        <ImageView
            android:id="@+id/tintuc_listitem_indicator"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:contentDescription="@string/null_string"
            android:src="@drawable/ic_action_collapse_dark" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/brown_border"
        android:orientation="vertical" >
    </LinearLayout>

</LinearLayout>
