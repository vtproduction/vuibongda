<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tintuc_large_image"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@color/base_app_color"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/menusubitem_img"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="30dp"
        android:contentDescription="@string/null_string"
        android:src="@drawable/refresh_icon" />

    <TextView
        android:id="@+id/menusubitem_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/app_name"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/white" />

    <ImageView
        android:id="@+id/actionbar_menu_btn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:contentDescription="@string/null_string"
        android:src="@drawable/menu_icon" />

</RelativeLayout>